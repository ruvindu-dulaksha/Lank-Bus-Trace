        "type": "text/javascript",
        "exec": [
          "// Enhanced global test script",
          "const responseTime = pm.response.responseTime;",
          "const statusCode = pm.response.code;",
          "const requestName = pm.info.requestName;",
          "",
          "// Log response info",
          "console.log(`üìä ${requestName}: ${statusCode} (${responseTime}ms)`);",
          "",
          "// Test for successful responses",
          "if ([200, 201, 204].includes(statusCode)) {",
          "    console.log('‚úÖ Success');",
          "    pm.test(`‚úÖ ${requestName} - Success (${statusCode})`, function () {",
          "        pm.expect(statusCode).to.be.oneOf([200, 201, 204]);",
          "    });",
          "} else if (statusCode === 403) {",
          "    console.log('üîí Correct security behavior (403 Forbidden)');",
          "    pm.test(`üîí ${requestName} - Security working (403)`, function () {",
          "        pm.expect(statusCode).to.equal(403);",
          "    });",
          "} else if (statusCode === 404) {",
          "    console.log('‚ùì Endpoint not implemented (404)');",
          "    pm.test(`‚ùì ${requestName} - Not implemented (404)`, function () {",
          "        pm.expect(statusCode).to.equal(404);",
          "    });",
          "} else {",
          "    console.log(`‚ùå Unexpected status: ${statusCode}`);",
          "    pm.test(`‚ùå ${requestName} - Check response (${statusCode})`, function () {",
          "        pm.expect(statusCode).to.be.oneOf([200, 201, 204, 403, 404]);",
